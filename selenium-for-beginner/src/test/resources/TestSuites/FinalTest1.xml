<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="AllTest" verbose="1">
	<test name="PostiveTests">
		<groups>
			<run>
				<include name="smoke-testing"></include>
			</run>
		</groups>
		
		<classes>
			<class name="com.herokuapp.theinternet.LoginTest" />
		</classes>
	</test>

	<test name="incorrectpassword">
		<parameter name="browser" value="chrome" />
		<parameter name="username" value="tomsmith" />
		<parameter name="password" value="incorrectpassword" />
		<parameter name="expectedmessage"
			value="Your password is invalid!" />
		<classes>
			<class name="com.herokuapp.theinternet.LoginTest">
				<methods>
					<include name="negativeLoginTest"></include>
				</methods>
			</class>
		</classes>
	</test>

	<test name="incorrectusername">
		<parameter name="browser" value="firefox" />
		<parameter name="username" value="incorrectusername" />
		<parameter name="password" value="SuperSecretPassword!" />
		<parameter name="expectedmessage"
			value="Your username is invalid!" />
		<classes>
			<class name="com.herokuapp.theinternet.LoginTest">
				<methods>
					<include name="negativeLoginTest"></include>
				</methods>
			</class>
		</classes>
	</test>
</suite>
